<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="467.0" prefWidth="737.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.jaxtech.jaxtech.controlador.PantallaAdmin">
    <TabPane prefHeight="467.0" prefWidth="737.0" style="--navbar-background-color: black"
             tabClosingPolicy="UNAVAILABLE">
        <Tab style="-fx-background-color: #4C934C;" text="Agregar producto">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="329.0" prefWidth="552.0"
                        style="-fx-background-color: #1A181B;">
                <ImageView fx:id="productoImg" fitHeight="326.0" fitWidth="326.0" layoutX="20.0" layoutY="35.0"
                           pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../../img/image.png"/>
                </ImageView>
                <TextField fx:id="nombreTextFiled" layoutX="481.0" layoutY="55.0"
                           style="-fx-background-color: #53A548; -fx-text-fill: white"/>
                <Label layoutX="427.0" layoutY="59.0" text="Nombre:" textFill="WHITE"/>
                <Label layoutX="376.0" layoutY="115.0" text="Tipo del producto:" textFill="WHITE"/>
                <TextField fx:id="stockTextFiled" layoutX="480.0" layoutY="163.0"
                           style="-fx-background-color: #53A548; -fx-text-fill: white"/>
                <Label layoutX="442.0" layoutY="167.0" text="Stock:" textFill="WHITE"/>
                <TextField fx:id="precioTextFiled" layoutX="480.0" layoutY="219.0"
                           style="-fx-background-color: #53A548; -fx-text-fill: white"/>
                <Label layoutX="435.0" layoutY="223.0" text="Precio:" textFill="WHITE"/>
                <CheckBox fx:id="checkAptoGaming" layoutX="464.0" layoutY="279.0" mnemonicParsing="false"
                          text="Apto para el gaming" textFill="WHITE"/>
                <Button layoutX="485.0" layoutY="363.0" mnemonicParsing="false" onAction="#seleccionarImagen"
                        style="-fx-background-color: #53A548; -fx-text-fill: white" text="Subir imagen"
                        textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Button>
                <ChoiceBox fx:id="tipoChoice" layoutX="480.0" layoutY="111.0" prefWidth="150.0"
                           style="-fx-background-color: #53A548;  -fx-text-fill: white"/>
                <Button layoutX="582.0" layoutY="363.0" mnemonicParsing="false" onAction="#agregarProducto"
                        style="-fx-background-color: #53A548;  -fx-text-fill: white" text="Agregar" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Button>
            </AnchorPane>
        </Tab>
        <Tab style="-fx-background-color: #4C934C;" text="Pantalla Usuarios">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                        style="-fx-background-color: #1A181B;">
                <TableView fx:id="tablaUsuarios" layoutX="17.0" layoutY="74.0" onMouseClicked="#activarBotones"
                           prefHeight="200.0" prefWidth="704.0" style="-fx-background-color: #53A548;">
                    <columns>
                        <TableColumn fx:id="columID" prefWidth="45.0" text="ID"/>
                        <TableColumn fx:id="columNombre" prefWidth="68.0" text="Nombre"/>
                        <TableColumn fx:id="columApellidos" prefWidth="85.0" text="Apellidos"/>
                        <TableColumn fx:id="columDireccion" prefWidth="120.0" text="Direccion"/>
                        <TableColumn fx:id="columTipoPago" prefWidth="95.0" text="Tipo de pago"/>
                        <TableColumn fx:id="columNumTelefono" prefWidth="144.0" text="Numero de telefono"/>
                        <TableColumn fx:id="columnTotalPedidos" prefWidth="146.0" text="Total de pedidos"/>
                    </columns>
                </TableView>
                <Button fx:id="buttModificarUsuario" disable="true" layoutX="314.0" layoutY="325.0"
                        mnemonicParsing="false" onAction="#modificarUsuario" style="-fx-background-color: #53A548;"
                        text="Modificar usuario" textFill="WHITE"/>
                <Button fx:id="buttCrearUsuario" layoutX="56.0" layoutY="325.0" mnemonicParsing="false"
                        onAction="#crearUsuario" style="-fx-background-color: #53A548;" text="Crear usuario"
                        textFill="WHITE"/>
                <Button fx:id="buttEliminarUsuario" disable="true" layoutX="559.0" layoutY="325.0"
                        mnemonicParsing="false" onAction="#eliminarUsario" style="-fx-background-color: #53A548;"
                        text="Eliminar usuario" textFill="WHITE"/>
                <ChoiceBox fx:id="filtroPagoChoice" layoutX="136.0" layoutY="33.0" prefWidth="150.0"
                           style="-fx-background-color: #53A548;"/>
                <Label layoutX="17.0" layoutY="37.0" prefHeight="17.0" prefWidth="106.0" text="Filtro tipo de pago"
                       textFill="WHITE"/>
            </AnchorPane>
        </Tab>
        <Tab style="-fx-background-color: #4C934C;" text="Analisis">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                        style="-fx-background-color: #1A181B;">
                <Label layoutX="230.0" layoutY="26.0" text="Resumen de las compras" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <AreaChart fx:id="productosComprados" layoutX="28.0" layoutY="90.0" prefHeight="161.0"
                           prefWidth="305.0">
                    <xAxis>
                        <CategoryAxis side="BOTTOM"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis prefHeight="253.0" prefWidth="31.0" side="LEFT"/>
                    </yAxis>
                </AreaChart>
                <Label layoutX="74.0" layoutY="70.0" text="Productos comprados anualmente" textFill="WHITE">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <AreaChart fx:id="cantidadDeVentas" layoutX="395.0" layoutY="90.0" prefHeight="161.0" prefWidth="309.0">
                    <xAxis>
                        <CategoryAxis side="BOTTOM"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis prefHeight="253.0" prefWidth="31.0" side="LEFT"/>
                    </yAxis>
                </AreaChart>
                <Label layoutX="508.0" layoutY="70.0" text="Cantidad de ventas" textFill="WHITE">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <AreaChart fx:id="dineroGenerado" layoutX="392.0" layoutY="263.0" prefHeight="161.0" prefWidth="312.0">
                    <xAxis>
                        <CategoryAxis side="BOTTOM"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis prefHeight="253.0" prefWidth="31.0" side="LEFT"/>
                    </yAxis>
                </AreaChart>
                <Label layoutX="515.0" layoutY="243.0" text="Dinero generado" textFill="WHITE">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label layoutX="107.0" layoutY="243.0" text="Cinco productos más vendidios" textFill="WHITE">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TableView fx:id="tablaMasVendido" layoutX="28.0" layoutY="270.0" prefHeight="148.0" prefWidth="346.0">
                    <columns>
                        <TableColumn fx:id="columTablaMasVendidoNombre" prefWidth="81.0" text="Nombre"/>
                        <TableColumn fx:id="columTablaMasVendidoNVentas" prefWidth="75.0" text="Nº ventas"/>
                        <TableColumn fx:id="columTablaMasVendidoUVendidas" prefWidth="113.0" text="Unidades vendidas"/>
                        <TableColumn fx:id="columTablaMasVendidoGanancias" prefWidth="75.0" text="Ganancias"/>
                    </columns>
                </TableView>
            </AnchorPane>
        </Tab>
    </TabPane>
</AnchorPane>
