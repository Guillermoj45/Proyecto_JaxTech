<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="387.0" prefWidth="333.0" style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.jaxtech.jaxtech.controlador.CrearUsuario">
    <children>
        <Label fx:id="textTitulo" layoutX="57.0" layoutY="21.0" style="-fx-text-fill: white;" text="AGREGAR USUARIO"
               textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Label layoutX="68.0" layoutY="84.0" style="-fx-text-fill: white;" text="Nombre"/>
        <TextField fx:id="fidelNombre" layoutX="124.0" layoutY="80.0" style="-fx-background-color: #53A548;"/>
        <Label layoutX="67.0" layoutY="124.0" style="-fx-text-fill: white;" text="Apellido"/>
        <TextField fx:id="fidelApellido" layoutX="123.0" layoutY="120.0" style="-fx-background-color: #53A548;"/>
        <Label layoutX="66.0" layoutY="161.0" style="-fx-text-fill: white;" text="Telefono"/>
        <TextField fx:id="fidelTelefono" layoutX="123.0" layoutY="157.0" style="-fx-background-color: #53A548;"/>
        <Label layoutX="61.0" layoutY="195.0" style="-fx-text-fill: white;" text="Dirección"/>
        <TextField fx:id="fidelDireccion" layoutX="123.0" layoutY="192.0" style="-fx-background-color: #53A548;"/>
        <Label layoutX="40.0" layoutY="231.0" style="-fx-text-fill: white;" text="Tipo de pago"/>
        <ChoiceBox fx:id="choiceTipoPago" layoutX="123.0" layoutY="227.0" prefWidth="150.0"
                   style="-fx-background-color: #53A548;"/>
        <PasswordField fx:id="fidelPassword" layoutX="123.0" layoutY="264.0" style="-fx-background-color: #53A548;"/>
        <Label layoutX="56.0" layoutY="268.0" style="-fx-text-fill: white;" text="Contraseña" wrapText="true"/>
        <Button layoutX="140.0" layoutY="347.0" mnemonicParsing="false" onAction="#guardarUsuario"
                style="-fx-background-color: #53A548; -fx-text-fill: white;" text="Guardar"/>
        <CheckBox fx:id="checkAdmin" layoutX="133.0" layoutY="306.0" mnemonicParsing="false"
                  style="-fx-background-color: #53A548; -fx-text-fill: white;" text="admin"/>
    </children>
</AnchorPane>
