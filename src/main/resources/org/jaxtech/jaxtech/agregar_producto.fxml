<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="467.0" prefWidth="737.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.jaxtech.jaxtech.controlador.AgregarProducto">
    <TabPane prefHeight="467.0" prefWidth="737.0" tabClosingPolicy="UNAVAILABLE">
        <Tab style="-fx-background-color: #928C6F;" text="Agregar producto">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="329.0" prefWidth="552.0"
                        style="-fx-background-color: #928C6F;">
                <ImageView fx:id="productoImg" fitHeight="326.0" fitWidth="326.0" layoutX="20.0"
                           layoutY="35.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../../img/image.1024x1024.png"/>
                </ImageView>
                <TextField fx:id="nombreTextFiled" layoutX="481.0" layoutY="55.0"/>
                <Label layoutX="427.0" layoutY="59.0" text="Nombre:"/>
                <Label layoutX="376.0" layoutY="115.0" text="Tipo del producto:"/>
                <TextField fx:id="stockTextFiled" layoutX="480.0" layoutY="163.0"/>
                <Label layoutX="442.0" layoutY="167.0" text="Stock:"/>
                <TextField fx:id="dimensionesTextFiled" layoutX="480.0" layoutY="219.0"/>
                <Label layoutX="402.0" layoutY="223.0" text="Dimensiones:"/>
                <CheckBox layoutX="464.0" layoutY="279.0" mnemonicParsing="false"
                          text="Apto para el gaming"/>
                <Button layoutX="485.0" layoutY="363.0" mnemonicParsing="false"
                        onAction="#seleccionarImagen" text="Subir imagen"/>
                <ChoiceBox fx:id="tipoChoice" layoutX="480.0" layoutY="111.0" prefWidth="150.0"/>
                <Button layoutX="582.0" layoutY="363.0" mnemonicParsing="false" onAction="#agregarProducto"
                        text="Agregar"/>
            </AnchorPane>
        </Tab>
        <Tab text="Pantalla Usuarios">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <TableView fx:id="tablaUsuarios" layoutX="17.0" layoutY="74.0" prefHeight="200.0"
                           prefWidth="704.0">
                    <columns>
                        <TableColumn fx:id="columID" prefWidth="45.0" text="ID"/>
                        <TableColumn fx:id="columNombre" prefWidth="68.0" text="Nombre"/>
                        <TableColumn fx:id="columApellidos" prefWidth="85.0" text="Apellidos"/>
                        <TableColumn fx:id="columDireccion" prefWidth="120.0" text="Direccion"/>
                        <TableColumn fx:id="columTipoPago" prefWidth="95.0" text="Tipo de pago"/>
                        <TableColumn fx:id="columNumTelefono" prefWidth="144.0" text="Numero de telefono"/>
                        <TableColumn fx:id="columnTotalPedidos" prefWidth="146.0" text="Total de pedidos"/>
                    </columns>
                </TableView>
                <Button fx:id="buttModificarUsuario" layoutX="314.0" layoutY="325.0" mnemonicParsing="false"
                        text="Modificar usuario"/>
                <Button fx:id="buttCrearUsuario" layoutX="56.0" layoutY="325.0" mnemonicParsing="false"
                        text="Crear usuario"/>
                <Button fx:id="buttEliminarUsuario" layoutX="559.0" layoutY="325.0" mnemonicParsing="false"
                        text="Eliminar usuario"/>
                <ChoiceBox fx:id="filtroPagoChoice" layoutX="136.0" layoutY="33.0" prefWidth="150.0"/>
                <Label layoutX="17.0" layoutY="37.0" prefHeight="17.0" prefWidth="106.0"
                       text="Filtro tipo de pago"/>
            </AnchorPane>
        </Tab>
        <Tab text="Analisis">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
        </Tab>
    </TabPane>
</AnchorPane>
