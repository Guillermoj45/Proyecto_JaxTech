<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.jaxtech.jaxtech.controlador.CarritoClientes">
    <children>
        <Label layoutX="185.0" layoutY="44.0" text="Carrito de la compra" textFill="WHITE">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <TableView fx:id="Tabla" layoutX="47.0" layoutY="115.0" onMouseClicked="#habiliarBoton" prefHeight="200.0"
                   prefWidth="507.0">
            <columns>
                <TableColumn fx:id="columImagen" prefWidth="75.0" text="Imagen"/>
                <TableColumn fx:id="columNombre" prefWidth="81.0" text="Nombre"/>
                <TableColumn fx:id="columTipo" prefWidth="105.0" text="Tipo"/>
                <TableColumn fx:id="columCantidad" prefWidth="127.0" text="Cantidad"/>
                <TableColumn fx:id="columCosteTotal" prefWidth="118.0" text="Coste"/>
            </columns>
        </TableView>
        <Button fx:id="buttElimiarProducto" disable="true" layoutX="84.0" layoutY="341.0" mnemonicParsing="false"
                onAction="#buttEliminarProducto" style="-fx-background-color: #53A548 #53A548; -fx-text-fill: white;"
                text="Eliminar producto"/>
        <Button layoutX="448.0" layoutY="341.0" mnemonicParsing="false" onAction="#comprar"
                style="-fx-background-color: #53A548 #53A548; -fx-text-fill: white;" text="Comprar"/>
    </children>
</AnchorPane>
